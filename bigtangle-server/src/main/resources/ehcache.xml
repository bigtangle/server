<config xmlns:jsr107='http://www.ehcache.org/v3/jsr107' xmlns='http://www.ehcache.org/v3'>
	<service>
		<jsr107:defaults enable-management="true"
			enable-statistics="true" />
	</service>

	<persistence directory="./cache"></persistence>


	<cache alias="Blocks" uses-template="block-template" />
	<cache alias="BlockEvaluations" uses-template="block-template" />
	<cache-template name="block-template">

		<resources>
			<heap>10</heap>
			<offheap unit="MB">800</offheap>
			<disk persistent="true" unit="GB">1</disk>
		</resources>
	</cache-template>

</config>

