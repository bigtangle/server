<configuration>
    <appender name="stdout1" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>"%date{yyyy-MM-dd'T'HH:mm:ss.SSSZ, Europe/Berlin}" [%thread] %-5level [%logger{42}:%line] - message: "%msg"%n</Pattern>
        </encoder>
    </appender>


    <root level="${LOGGING_LEVEL:-INFO}">
        <appender-ref ref="stdout1"/>
    </root>

    <logger name="de.db.as.vdv" level="DEBUG"/>
    
    <logger name="org.apache.kafka" level="${LOGGING_LEVEL_KAFKA:-WARN}"/>
    
    <logger name="org.apache.kafka.streams.KafkaStreams" level="INFO"/>
    <logger name="org.apache.kafka.clients.consumer.ConsumerConfig" level="ERROR"/>
    <logger name="org.apache.kafka.clients.producer.ProducerConfig" level="ERROR"/>
    
</configuration>